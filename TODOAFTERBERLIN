SELECT h1.uuid, count(*) AS count_hashtags
FROM hashtags AS h1
LEFT JOIN hashtags AS h2 ON h1.uuid='d8866ba8-ec6d-4239-af34-e93b28ef785a'
AND h1.content = h2.content AND h1.uuid <> h2.uuid
WHERE h2.uuid IS NOT NULL
GROUP BY 1
